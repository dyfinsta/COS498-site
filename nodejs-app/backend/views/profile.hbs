<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{title}}</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  {{> nav}}

  <main>
    <h1>User Profile</h1>
    
    <div class="profile-section">
      <h2>Current Profile</h2>
      
      <div class="profile-info">
        <div class="profile-avatar-section">
          {{#if profile.profile_avatar_url}}
            <img src="{{profile.profile_avatar_url}}" alt="Profile Picture" class="profile-avatar-large">
          {{else}}
            <div class="profile-avatar-placeholder-large">
              {{substring profile.display_name 0 1}}
            </div>
          {{/if}}
        </div>
        
        <div class="profile-details">
          <div class="profile-field">
            <strong>Username:</strong> {{profile.username}}
          </div>
          <div class="profile-field">
            <strong>Display Name:</strong> {{profile.display_name}}
          </div>
          <div class="profile-field">
            <strong>Email:</strong> {{profile.email}}
          </div>
          <div class="profile-field">
            <strong>Member Since:</strong> {{formatDate profile.created_at}}
          </div>
          {{#if profile.last_login}}
          <div class="profile-field">
            <strong>Last Login:</strong> {{formatDate profile.last_login}}
          </div>
          {{/if}}
        </div>
      </div>
    </div>

    <div class="profile-section">
      <h2>Change Profile Picture</h2>
      <form method="POST" action="/profile/change-avatar">
        <div class="form-group">
          <label for="profile_avatar_url">Profile Picture URL:</label>
          <input type="url" id="profile_avatar_url" name="profile_avatar_url" 
                 value="{{profile.profile_avatar_url}}" 
                 placeholder="https://example.com/your-picture.jpg">
          <small>Enter a URL to an image (JPG, PNG, GIF). Leave blank to remove picture.</small>
        </div>
        <button type="submit">Update Profile Picture</button>
      </form>
    </div>

    <div class="profile-section">
      <h2>Change Password</h2>
      <form method="POST" action="/profile/change-password">
        <div class="form-group">
          <label for="current_password">Current Password:</label>
          <input type="password" id="current_password" name="current_password" required>
        </div>
        <div class="form-group">
          <label for="new_password">New Password:</label>
          <input type="password" id="new_password" name="new_password" required>
        </div>
        <div class="form-group">
          <label for="confirm_password">Confirm New Password:</label>
          <input type="password" id="confirm_password" name="confirm_password" required>
        </div>
        <button type="submit">Change Password</button>
      </form>
    </div>

    <div class="profile-section">
      <h2>Change Email</h2>
      <form method="POST" action="/profile/change-email">
        <div class="form-group">
          <label for="new_email">New Email:</label>
          <input type="email" id="new_email" name="new_email" required>
        </div>
        <div class="form-group">
          <label for="password">Current Password:</label>
          <input type="password" id="password" name="password" required>
        </div>
        <button type="submit">Change Email</button>
      </form>
    </div>

    <div class="profile-section">
      <h2>Change Display Name</h2>
      <form method="POST" action="/profile/change-display-name">
        <div class="form-group">
          <label for="new_display_name">New Display Name:</label>
          <input type="text" id="new_display_name" name="new_display_name" 
                 value="{{profile.display_name}}" required>
        </div>
        <button type="submit">Change Display Name</button>
      </form>
    </div>
  </main>

  {{> footer}}
</body>
</html>
